@using MegaSchool1.Model
@using MegaSchool1.Model.Dto
@inherits Components.ComponentBase
@inject UISettings UI

<MudStack Spacing="3">
    @if (UI.SpanishLocale[this.Content] != null)
    {
        <ShareableMultilingual Content="Content" />
    }
    else
    {
        <Shareable Content="Content"/>
    }
    @if (UI.EnglishLocale[this.Content]?.Metadata != null)
    {
        <MudCard Outlined="true">
            <MudCardContent>
                <MudStack>
                    <MudText>@((MarkupString)UI.EnglishLocale[this.Content]!.Metadata!)</MudText>
                </MudStack>
                <MudContainer>@((MarkupString)UI.EnglishLocale[this.Content]!.Metadata!)</MudContainer>
            </MudCardContent>
        </MudCard>
    }
</MudStack>
@code {
    [Parameter]
    public Content Content { get; set; } = Content.Membership;
}
