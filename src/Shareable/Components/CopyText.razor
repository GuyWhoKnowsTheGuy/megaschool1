@inherits ComponentBase

<MudStack Row="true">
    <MudSpacer />
    <MudText Align="Align.Center">
        @this.Description
        <br />
        <MudTooltip Text="@Tooltip" IsVisible="_showTooltip" ShowOnClick="true" ShowOnFocus="false" ShowOnHover="false">
            <MudButton OnClick="OnCopyClick" EndIcon="@Icons.Material.Filled.ContentCopy" Variant="Variant.Text" Color="Color.Primary">Copy</MudButton>
        </MudTooltip>
    </MudText>
    <MudSpacer />
</MudStack>

@code {
    private bool _showTooltip = false;

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public string TextToCopy { get; set; }

    [Parameter]
    public string Tooltip { get; set; }

    private async Task OnCopyClick()
    {
        await this.CopyTextToClipboardAsync(this.TextToCopy);

        _showTooltip = true;
        base.StateHasChanged();

        await Task.Delay(3 * 1000);

        _showTooltip = false;
        base.StateHasChanged();
    }
}
